<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="tsc-user-provider" owner="tsc" organization="ericsson"/>

    <dubbo:registry address="zookeeper://127.0.0.1:2181"/>

	<dubbo:protocol name="rest" port="10880" server="tomcat" extension="com.ericsson.csp.tsc.api.util.TscValidationExceptionMapper"/>
	
	<dubbo:service interface="com.ericsson.csp.tsc.api.resource.TscUserResource" ref="tscUserService" protocol="rest" validation="true"/>
	<bean id="tscUserService" class="com.ericsson.csp.tsc.user.provider.resource.TscUserResourceImpl" />
</beans>